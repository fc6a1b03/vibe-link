{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@backend/*": [
        "src/backend/src/*"
      ],
      "@frontend/*": [
        "src/frontend/src/*"
      ],
      "@common/*": [
        "src/common/*"
      ]
    },
    "include": [
      "src/backend/*"
    ],
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}